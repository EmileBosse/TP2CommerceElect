@model WebApplication.Models.ParticiperTournoi

@{
    ViewData["Title"] = "Create";
    Tournoi tournoi = (Tournoi)ViewData["Tournoi"];
}

<h2>Create</h2>

<h4>ParticiperTournoi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nom du tournoi</label>
                <input class="form-control" readonly value="@tournoi.Nom" />
                <input asp-for="Tournoi" hidden readonly value="@tournoi.Id" />               
            </div>
            <div class="form-group">
                <label asp-for="Participant" class="control-label"></label>
                <select asp-for="Participant" asp-items="ViewBag.Participants"></select>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

